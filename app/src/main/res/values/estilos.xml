<resources>

    <!---️ Estilo para el layout centrado -->
    <style name="EstiloLayoutCentrado">
        <item name="android:background">@drawable/fondo_layout</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Estilo para EditText -->
    <style name="EstiloEditText">
        <item name="android:background">@drawable/borde_edittext</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Estilo para títulos -->
    <style name="EstiloTitulo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="EstiloBotones">
        <item name="android:backgroundTint">#c0c0c0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>